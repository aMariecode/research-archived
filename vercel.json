{
  "version": 2,
  "builds": [
    {
      "src": "capstone-frontend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "capstone-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "capstone-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "capstone-frontend/app.js"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",
    "JWT_SECRET": "@jwt_secret",
    "CLOUD_NAME": "@cloud_name",
    "CLOUD_API_KEY": "@cloud_api_key",
    "CLOUD_API_SECRET": "@cloud_api_secret",
    "GOOGLE_CLIENT_ID": "@google_client_id",
    "GOOGLE_CLIENT_SECRET": "@google_client_secret"
  }
}
