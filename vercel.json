{
  "version": 2,
  "buildCommand": "npm run build --prefix capstone-backend && npm run build --prefix capstone-frontend",
  "public": "capstone-frontend/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
