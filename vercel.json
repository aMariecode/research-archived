{
  "version": 2,
  "builds": [
    {
      "src": "capstone-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "capstone-frontend/public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "capstone-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "capstone-frontend/public/$1"
    }
  ]
}